{
  "name": "@lampter/server",
  "version": "1.0.0",
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./umd",
    "prebuild": "yarn clean",
    "build": "yarn build:cjs && yarn build:umd",
    "build:cjs": "tsc -p tsconfig.build.json",
    "build:umd": "yarn bundle:prod",
    "bundle:prod": "webpack --config webpack.production.js",
    "bundle:dev": "webpack --config webpack.development.js",
    "test": "mocha \"test/**/*.spec.ts?(x)\"",
    "start:dev": "nodemon ./umd/index.js",
    "start": "yarn bundle:dev",
    "prepack": "yarn build"
  },
  "peerDependencies": {},
  "dependencies": {
    "apollo-server": "^2.9.7",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "graphql": "^14.5.8"
  },
  "files": [
    "cjs",
    "umd",
    "src"
  ],
  "license": "MIT",
  "repository": "https://github.com/Lampter/lampter-mono.git",
  "private": true,
  "publishConfig": {
    "access": "public"
  }
}
