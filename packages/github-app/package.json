{
    "name": "@lampter/github-app",
    "version": "1.0.0",
    "main": "cjs/index.js",
    "types": "cjs/index.d.ts",
    "scripts": {
        "clean": "rimraf ./cjs",
        "prebuild": "yarn clean",
        "build": "tsc -p tsconfig.build.json",
        "dev": "probot run ./cjs/index.js",
        "watch-node": "nodemon --exec \"yarn dev\"",
        "watch-ts": "tsc -p tsconfig.build.json -w",
        "start": "concurrently 'yarn watch-ts' 'yarn watch-node'",
        "test": "jest && standard **/*.ts",
        "test:watch": "jest --watch --notify --notifyMode=change --coverage"
    },
    "dependencies": {
        "probot": "^9.0.1"
    },
    "devDependencies": {},
    "engines": {
        "node": ">= 8.3.0"
    },
    "license": "MIT",
    "repository": "https://github.com/Lampter/lampter-mono.git",
    "private": true,
    "publishConfig": {
        "access": "public"
    }
}
