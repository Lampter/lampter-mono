{
  "name": "lampter",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "test": "jest && standard packages/**/*.ts",
    "start": "yarn workspace @lampter/server start",
    "prettify": "yarn prettier \"packages/**/*.{js,ts,tsx}\" --write",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ts-tools/node": "^1.1.1",
    "@ts-tools/webpack-loader": "^1.1.0",
    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.22",
    "@types/nock": "^11.1.0",
    "@types/node": "^12.12.6",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/webpack-env": "^1.14.1",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.0.0",
    "cpx": "^1.5.0",
    "css-loader": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "html-webpack-plugin": "next",
    "jest": "^24.9.0",
    "lerna": "^3.18.3",
    "mini-css-extract-plugin": "^0.8.0",
    "nock": "^11.7.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "probot": "^9.6.4",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rimraf": "^3.0.0",
    "smee-client": "^1.1.0",
    "standard": "^14.3.1",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "license": "MIT",
  "private": true
}
